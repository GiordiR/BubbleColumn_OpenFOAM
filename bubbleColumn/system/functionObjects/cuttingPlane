FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      functionObject;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

cuttingPlane
{
    type            		surfaceFieldValue;
    functionObjectLibs 		("libfieldFunctionObjects.so");
    enabled         		false;

	writeControl   			timeStep;
	writeInterval  			100;
	
	surfaceFormat			raw;

    log             		true;
    writeFields     		false;

	regionType          	sampledSurface;
    name      				cuttingSamplePlane;

	sampledSurfaceDict
	{
		type 				plane;
		planeType       	pointAndNormal;
		pointAndNormalDict
		{
		    basePoint       (0.05 0.08 0.01);
		    normalVector    (0 1 0);
		}
	}

    operation       		none;
    fields
    (
        UMean.air
        UMean.water
        alphaMean.air
        alphaMean.water
        pMean
    );
}
